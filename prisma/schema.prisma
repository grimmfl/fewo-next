generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("POSTGRES_PRISMA_URL")
}

model information {
  id      Int     @id
  title   String?
  content String
  icon    String?
  hide    Int
}

model invoice_number {
  year   Int @id
  number Int
}

model price {
  id       Int     @id
  title    String
  subtitle String?
  value    Float   @db.Real
  priority Int
}

model reservation {
  id                   Int     @id
  name                 String
  date_from            String
  date_to              String
  count                Int?
  price                Float?  @db.Real
  email                String?
  phone                String?
  nationality          String?
  street               String?
  house_number         String?
  postal_code          String?
  city                 String?
  country              String?
  is_same_as_normal    Int
  billing_street       String?
  billing_house_number String?
  billing_postal_code  String?
  billing_city         String?
  billing_country      String?
  company_name         String?
  invoice_type         Int
  invoice_number       String?
  note                 String?
  date_invoice         String?
}

model user {
  id       Int     @id
  name     String
  password String
  token    String?
}
